<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8"
            android:minHeight="@dimen/size_100"
            CardView:cardBackgroundColor="@color/colorBackground"
            CardView:cardCornerRadius="@dimen/size_8"
            CardView:cardElevation="2dp"
            CardView:cardPreventCornerOverlap="false"
            CardView:cardUseCompatPadding="true"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginBottom="@dimen/size_20"
                    android:paddingRight="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingStart="@dimen/size_10"
                    android:gravity="center_horizontal|center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="Assign Task to Field Engineers"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:textColorHint="@android:color/white">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_line"
                        android:gravity="center_vertical"
                        android:hint="@string/customer_name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/size_10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@android:color/white" />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@android:color/black" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:textColorHint="@android:color/white">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_line"
                        android:gravity="center_vertical"
                        android:hint="@string/mobile"
                        android:inputType="phone"
                        android:padding="@dimen/size_10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@android:color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@android:color/black" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:textColorHint="@android:color/white">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_line"
                        android:gravity="center_vertical"
                        android:hint="@string/prompt_email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/size_10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@android:color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@android:color/black" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiletRequestNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:textColorHint="@android:color/white">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etRequestNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_line"
                        android:gravity="center_vertical"
                        android:hint="@string/request_number"
                        android:inputType="number"
                        android:padding="@dimen/size_10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@android:color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@android:color/black" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_line"
                        android:gravity="center_vertical"
                        android:hint="Address"
                        android:inputType="textPostalAddress"
                        android:padding="@dimen/size_10"
                        android:text=""
                        android:maxHeight="@dimen/size_100"
                        android:textColor="@android:color/white" />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@android:color/black"
                    android:textColorHint="@android:color/white"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/size_5"
                    android:paddingRight="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingStart="@dimen/size_10"
                    android:text="Request Type"
                    android:textColorHint="@android:color/white"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinRequestType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/size_50">

                </androidx.appcompat.widget.AppCompatSpinner>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@android:color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="@dimen/size_120"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginTop="@dimen/size_40"
                    android:layout_marginBottom="@dimen/size_50"
                    android:background="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="Submit"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>