<?xml version="1.0" encoding="utf-8"?>

                                                               
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:tag="layout/edit_order_detail_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvOrderNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <TextView
                        android:id="@+id/tvAppointmentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <TextView
                        android:id="@+id/tvReAppointmentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:hint="Name"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/tvF_nameOrH_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="Father name/ Husband name"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/tvM_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:hint="Mother Name"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:hint="Address"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/tvMobileNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:hint="Mobile Number"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:hint="Email Id"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textColor"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:layout_alignParentBottom="true"
            android:text="Submit"/>

    </RelativeLayout>
         